	<template name="number_ct_ability">
		<number_ct>
			<anchored width="20" height="20" />
			<default>10</default>
			<script>
				function action(draginfo)
					local rActor = ActorManager.getActorFromCT(window.getDatabaseNode());
					if Input.isShiftPressed() then
						ActionSave.performRoll(draginfo, rActor, self.target[1]);
					else
						ActionCheck.performRoll(draginfo, rActor, self.target[1]);
					end
					return true;
				end
				
				function onDragStart(button, x, y, draginfo)
					return action(draginfo);
				end

				function onDoubleClick(x,y)
					return action();
				end
			</script>
		</number_ct>
	</template>
	<template name="number_ct_init">
		<number_ct>
			<displaysign />
			<script>
				function action(draginfo)
					local node = window.getDatabaseNode();
					local rActor = ActorManager.getActorFromCT(node);
					ActionInit.performRoll(draginfo, rActor, CombatManager.isCTHidden(node));
					return true;
				end
				
				function onDragStart(button, x, y, draginfo)
					return action(draginfo);
				end

				function onDoubleClick(x,y)
					return action();
				end
			</script>
		</number_ct>
	</template>
